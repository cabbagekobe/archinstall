{
    "config_version": "2.5.1",
    "audio": "pipewire",
    "debug": false,
    "bootloader": "systemd-bootctl",
    "host-name": "x270-arch",
    "keyboard-layout": "jp106",
    "harddrives": [
        "/dev/sda"
    ],
    "additional-repositories": [
        "multilib"
    ],
    "mirror-region": {
        "Japan": {
            "http://ftp.jaist.ac.jp/pub/Linux/ArchLinux/$repo/os/$arch": true,
            "http://ftp.tsukuba.wide.ad.jp/Linux/archlinux/$repo/os/$arch": true,
            "http://mirrors.cat.net/archlinux/$repo/os/$arch": true,
            "https://ftp.jaist.ac.jp/pub/Linux/ArchLinux/$repo/os/$arch": true,
            "https://mirror.saebasol.org/archlinux/$repo/os/$arch": true,
            "https://mirrors.cat.net/archlinux/$repo/os/$arch": true
        }
    },
    "nic": {
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "nm"
    },
    "no_pkg_lookups": false,
    "offline": false,
    "profile": {
        "path": "/usr/lib/python3.10/site-packages/archinstall/profiles/minimal.py"
    },
    "parallel downloads": 5,
    "packages": [
        "git", "openssh", "wget", "rsync",
        "vim", "neovim", "xclip",
        "ffmpeg", "youtube-dl", "mpv", "imagemagick",
        "xorg-server", "xorg-xinit", "xf86-video-intel", "mesa", "xdg-user-dirs", "arandr",
        "lightdm", "lightdm-gtk-greeter",
        "tilix",
        "openbox",
        "nemo",
        "rofi",
        "polybar",
        "fcitx5-im", "fcitx5-mozc", "fcitx5-configtool",
        "filezilla", "flameshot",
        "docker"
    ],
    "custom-commands": [
      "mkdir /home/cabbagekobe/.ssh",
      "curl https://github.com/cabbagekobe.keys >> /home/cabbagekobe/.ssh/authorized_keys",

      "touch /home/cabbagekobe/.xprofile",
      "echo 'export GTK_IM_MODULE=fcitx' >> /home/cabbagekobe/.xprofile",
      "echo 'export QT_IM_MODULE=fcitx' >> /home/cabbagekobe/.xprofile",
      "echo 'export XMODIFIERS=@im=fcitx' >> /home/cabbagekobe/.xprofile",

      "touch /home/cabbagekobe/.Xmodmap",
      "echo 'clear lock' >> /home/cabbagekobe/.Xmodmap",
      "echo 'clear control' >> /home/cabbagekobe/.Xmodmap",
      "echo 'keycode 66 = Control_L' >> /home/cabbagekobe/.Xmodmap",
      "echo 'add control = Control_L Control_R' >> /home/cabbagekobe/.Xmodmap",

      "git clone --depth 1 https://github.com/wbthomason/packer.nvim /home/cabbagekobe/.local/share/nvim/site/pack/packer/start/packer.nvim",

      "git clone https://github.com/cabbagekobe/archconfig.git /home/cabbagekobe/tmp_config",
      "rsync -a /home/cabbagekobe/tmp_config/ /home/cabbagekobe/"
    ],
    "services": [
      "sshd",
      "lightdm"
    ],
    "script": "guided",
    "silent": false,
    "swap": false,
    "sys-encoding": "UTF-8",
    "sys-language": "en_US",
    "timezone": "Asia/Tokyo",
    "version": "2.5.1"
}
